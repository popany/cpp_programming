{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "hello_world client",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/hello_world/bin/client",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/hello_world/bin",
            "environment": [{"name": "LD_LIBRARY_PATH", "value": "/usr1/grpc-debug/lib:/usr1/grpc-debug/lib64:"}],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}